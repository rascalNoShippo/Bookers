<% content_for(:pagetitle, "Books") %>

<div class="list">
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |item| %>
      <tr>
        <th><%= item.id %></th>
        <td><%= item.title %></td>
        <td><%= item.body %></td>
        <td><%= link_to "Show", book_path(item.id) %></td>
        <td><%= link_to "Edit", edit_book_path(item.id) %></td>
        <td><%= link_to "Destroy", book_path(item.id), method: :delete, "data-confirm" => "ID : #{item.id} を削除しますか？" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <span><%= link_to "TOP", root_path() %></span>
</div>

<div class="create_form">
  <h3>New Book</h3>
    <% if @new_book.errors.any? %>
      <div class="error_message">
        <p><%= @new_book.errors.count %>件のerrorが発生しました：</p>
        <ul>
        <% @new_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @new_book, url: '/books', method: :post do |f| %>
      <div class="form">
        <%= f.label :title , "タイトル" , class: "form-items" %>
        <%= f.text_field :title , class: "form-items" %>
      </div>
      <div class="form">
        <%= f.label :body , "本文" , class: "form-items" %>
        <%= f.text_area :body , class: "form-items" %>
      </div>
      <div class="form">
        <%= f.submit 'Create Book' , class: "button"%>
      </div>
    <% end %>
</div>
<div class="u">
  <%= @para %>
</div>